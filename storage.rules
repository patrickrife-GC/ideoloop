rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Images folder - allow authenticated users to write to their own folder
    match /images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Sessions folder (audio files) - allow authenticated users to write to their own folder
    match /sessions/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
